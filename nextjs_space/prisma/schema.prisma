// ============================================
// Real-Time Alerting
// ============================================

enum AlertSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum AlertStatus {
  ACTIVE
  ACKNOWLEDGED
  RESOLVED
  SILENCED
}

enum AlertRuleType {
  THRESHOLD
  ANOMALY
  ABSENCE
  COMPOSITE
}

model AlertRule {
  id               String        @id @default(cuid())
  orgId            String
  name             String
  description      String?
  type             AlertRuleType @default(THRESHOLD)
  isActive         Boolean       @default(true)
  metric           String        // e.g., "latency", "error_rate", "requests_per_second"
  condition        String        // e.g., ">", "<", ">=", "<=", "=="
  threshold        Float
  duration         Int           @default(60000) // How long condition must be true (ms)
  severity         AlertSeverity @default(MEDIUM)
  targetType       String?       // backend, cluster, replica, global
  targetId         String?
  cooldownMs       Int           @default(300000) // Don't re-alert for this duration
  notifyChannels   String[]      @default([])
  escalationPolicy Json          @default("{}")
  metadata         Json          @default("{}")
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  alerts           Alert[]

  @@unique([orgId, name])
  @@index([orgId])
  @@index([isActive])
  @@index([metric])
  @@map("alert_rules")
}

model Alert {
  id             String        @id @default(cuid())
  orgId          String
  rule           AlertRule?    @relation(fields: [ruleId], references: [id], onDelete: SetNull)
  ruleId         String?
  severity       AlertSeverity @default(MEDIUM)
  status         AlertStatus   @default(ACTIVE)
  title          String
  message        String
  metricValue    Float?
  threshold      Float?
  targetType     String?
  targetId       String?
  acknowledgedBy String?
  acknowledgedAt DateTime?
  resolvedAt     DateTime?
  notifiedAt     DateTime?
  metadata       Json          @default("{}")
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([orgId])
  @@index([ruleId])
  @@index([status])
  @@index([severity])
  @@index([createdAt])
  @@map("alerts")
}

model AlertChannel {
  id           String   @id @default(cuid())
  orgId        String
  name         String
  type         String   // email, webhook, slack, pagerduty
  config       Json     @default("{}")
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([orgId, name])
  @@index([orgId])
  @@index([type])
  @@map("alert_channels")
}

// ============================================
// Traffic Ingestion Endpoints
// ============================================

enum EndpointType {
  LOAD_BALANCE
  ROUTE
  PROXY
  MOCK
}

enum SessionAffinityMode {
  NONE              // No session affinity
  COOKIE            // Use a cookie to track backend assignment
  IP_HASH           // Hash client IP to assign backend
  HEADER            // Use a specific header value
}

enum ProxyMode {
  REVERSE_PROXY     // Full reverse proxy - URL stays masked
  PASSTHROUGH       // Pass through to backend - may expose backend URL
  REDIRECT          // HTTP redirect to backend URL
  SMART             // Automatically decide based on request/response
}

model TrafficEndpoint {
  id              String        @id @default(cuid())
  orgId           String
  name            String
  slug            String        @unique   // Unique URL path segment
  description     String?
  type            EndpointType  @default(LOAD_BALANCE)
  clusterId       String?       // Target backend cluster for load balancing
  policyId        String?       // Associated routing policy
  config          Json          @default("{}") // Additional configuration (headers, timeouts, etc.)
  isActive        Boolean       @default(true)
  
  // Custom domain routing (for CNAME-based routing)
  customDomain    String?       @unique  // e.g., "api.mycompany.com"
  
  // Proxy Configuration
  proxyMode           ProxyMode           @default(REVERSE_PROXY)
  sessionAffinity     SessionAffinityMode @default(NONE)
  affinityCookieName  String              @default("_tcp_affinity") // Cookie name for session affinity
  affinityHeaderName  String?             // Header name for HEADER affinity mode
  affinityTtlSeconds  Int                 @default(3600)  // Session affinity TTL
  
  // Timeout Configuration (in milliseconds)
  connectTimeout      Int       @default(5000)
  readTimeout         Int       @default(30000)
  writeTimeout        Int       @default(30000)
  
  // Header Rewriting
  rewriteHostHeader   Boolean   @default(true)   // Rewrite Host header to backend
  rewriteLocationHeader Boolean @default(true)  // Rewrite Location headers in responses
  rewriteCookieDomain Boolean   @default(true)   // Rewrite Set-Cookie domains
  rewriteCorsHeaders  Boolean   @default(true)   // Rewrite CORS headers
  preserveHostHeader  Boolean   @default(false)  // Keep original Host header
  
  // Request/Response Modification
  stripPathPrefix     String?   // Strip this prefix from the path before forwarding
  addPathPrefix       String?   // Add this prefix to the path when forwarding
  forwardHeaders      String[]  @default(["X-Forwarded-For", "X-Forwarded-Proto", "X-Forwarded-Host", "X-Real-IP"])
  
  // WebSocket Support
  websocketEnabled    Boolean   @default(true)
  
  // Statistics
  totalRequests   BigInt        @default(0)
  totalErrors     BigInt        @default(0)
  avgLatencyMs    Float         @default(0)
  lastRequestAt   DateTime?
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@unique([orgId, name])
  @@index([orgId])
  @@index([slug])
  @@index([customDomain])
  @@index([isActive])
  @@map("traffic_endpoints")
}

// Session Affinity Mappings - tracks which client is assigned to which backend
model AffinityMapping {
  id              String    @id @default(cuid())
  endpointId      String
  clientKey       String    // Hashed client identifier (IP, cookie value, or header value)
  backendId       String    // Assigned backend ID
  expiresAt       DateTime
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@unique([endpointId, clientKey])
  @@index([endpointId])
  @@index([expiresAt])
  @@map("affinity_mappings")
}

// ============================================
// Federation - Multi-TCP Clustering
// ============================================

enum FederationRole {
  PRINCIPLE    // The primary node that propagates configuration
  PARTNER      // Receives configuration from Principle
  STANDALONE   // Not part of any federation
}

enum FederationRequestStatus {
  PENDING      // Awaiting acknowledgment
  ACKNOWLEDGED // Accepted by Principle
  REJECTED     // Rejected by Principle
  EXPIRED      // Timed out
  CANCELLED    // Cancelled by requester
}

enum FederationSyncStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

// Represents this TCP node's federation configuration
model FederationConfig {
  id              String          @id @default(cuid())
  orgId           String          @unique
  nodeId          String          @unique @default(cuid()) // Unique identifier for this node
  nodeName        String          // Human-readable name for this node
  nodeUrl         String          // Public URL of this TCP instance
  role            FederationRole  @default(STANDALONE)
  principleNodeId String?         // If Partner, the ID of the Principle
  principleUrl    String?         // If Partner, the URL of the Principle
  secretKey       String          // Shared secret for authentication between nodes
  lastHeartbeat   DateTime?       // Last successful heartbeat
  isActive        Boolean         @default(true)
  metadata        Json            @default("{}")
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([nodeId])
  @@index([role])
  @@map("federation_configs")
}

// Partner nodes connected to this TCP (when acting as Principle)
model FederationPartner {
  id              String          @id @default(cuid())
  orgId           String
  nodeId          String          // Partner's unique node ID
  nodeName        String
  nodeUrl         String
  secretKey       String          // Shared secret for this partner
  isActive        Boolean         @default(true)
  lastSyncAt      DateTime?       // Last successful sync to this partner
  lastHeartbeat   DateTime?       // Last heartbeat received
  syncStatus      FederationSyncStatus @default(PENDING)
  failedSyncCount Int             @default(0)
  metadata        Json            @default("{}")
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  syncLogs        FederationSyncLog[]

  @@unique([orgId, nodeId])
  @@index([orgId])
  @@index([nodeId])
  @@index([isActive])
  @@map("federation_partners")
}

// Partnership requests (both incoming and outgoing)
model FederationRequest {
  id                String                  @id @default(cuid())
  orgId             String
  requestType       String                  // "OUTGOING" or "INCOMING"
  requesterNodeId   String                  // Node ID of the requester (Partner)
  requesterNodeName String
  requesterNodeUrl  String
  targetNodeId      String?                 // Node ID of the target (Principle)
  targetNodeUrl     String?                 // URL of the target
  status            FederationRequestStatus @default(PENDING)
  secretKey         String                  // Proposed shared secret
  message           String?                 // Optional message
  acknowledgedAt    DateTime?
  rejectedAt        DateTime?
  rejectionReason   String?
  expiresAt         DateTime                // Request expiration
  metadata          Json                    @default("{}")
  createdAt         DateTime                @default(now())
  updatedAt         DateTime                @updatedAt

  @@index([orgId])
  @@index([status])
  @@index([requesterNodeId])
  @@index([targetNodeId])
  @@map("federation_requests")
}

// Promotion requests (Partner requesting to become Principle)
model FederationPromotionRequest {
  id                String    @id @default(cuid())
  orgId             String
  requesterNodeId   String    // Partner requesting promotion
  requesterNodeUrl  String
  currentPrincipleId String?  // Current Principle's node ID
  status            String    @default("PENDING") // PENDING, APPROVED, REJECTED, AUTO_PROMOTED, CANCELLED
  requestedAt       DateTime  @default(now())
  responseDeadline  DateTime  // 30 seconds from request
  respondedAt       DateTime?
  promotedAt        DateTime?
  reason            String?
  metadata          Json      @default("{}")
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@index([orgId])
  @@index([status])
  @@index([requesterNodeId])
  @@map("federation_promotion_requests")
}

// Sync operation logs
model FederationSyncLog {
  id              String              @id @default(cuid())
  orgId           String
  partner         FederationPartner?  @relation(fields: [partnerId], references: [id], onDelete: SetNull)
  partnerId       String?
  direction       String              // "OUTGOING" (to partner) or "INCOMING" (from principle)
  syncType        String              // "FULL", "INCREMENTAL", "CONFIG_CHANGE"
  status          FederationSyncStatus @default(PENDING)
  entitiesSynced  Json                @default("{}") // { backends: 5, policies: 3, etc. }
  errorMessage    String?
  startedAt       DateTime            @default(now())
  completedAt     DateTime?
  durationMs      Int?
  metadata        Json                @default("{}")

  @@index([orgId])
  @@index([partnerId])
  @@index([status])
  @@index([startedAt])
  @@map("federation_sync_logs")
}
