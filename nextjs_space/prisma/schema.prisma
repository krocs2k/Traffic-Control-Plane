generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/traffic-control-plane/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  ADMIN
  OPERATOR
  VIEWER
  AUDITOR
}

enum UserStatus {
  ACTIVE
  INACTIVE
  PENDING
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  settings    Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members         OrganizationMember[]
  invites         OrganizationInvite[]
  auditLogs       AuditLog[]
  backendClusters BackendCluster[]
  routingPolicies RoutingPolicy[]
  readReplicas    ReadReplica[]

  @@map("organizations")
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  passwordHash String
  name         String
  avatarUrl    String?
  mfaEnabled   Boolean    @default(false)
  mfaSecret    String?
  mfaBackupCodes String[] @default([])
  mfaVerifiedAt DateTime?
  status       UserStatus @default(ACTIVE)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  memberships       OrganizationMember[]
  sessions          Session[]
  auditLogs         AuditLog[]
  passwordResets    PasswordResetToken[]
  invitesSent       OrganizationMember[] @relation("InvitedBy")
  inviteTokens      OrganizationInvite[]

  @@map("users")
}

model OrganizationMember {
  id           String   @id @default(cuid())
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId        String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  role         Role     @default(VIEWER)
  invitedBy    User?    @relation("InvitedBy", fields: [invitedById], references: [id])
  invitedById  String?
  joinedAt     DateTime @default(now())

  @@unique([orgId, userId])
  @@map("organization_members")
}

model OrganizationInvite {
  id           String       @id @default(cuid())
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId        String
  email        String
  role         Role         @default(VIEWER)
  token        String       @unique
  invitedBy    User         @relation(fields: [invitedById], references: [id])
  invitedById  String
  expiresAt    DateTime
  usedAt       DateTime?
  createdAt    DateTime     @default(now())

  @@unique([orgId, email])
  @@map("organization_invites")
}

model Session {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  token       String   @unique
  expiresAt   DateTime
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@map("sessions")
}

model AuditLog {
  id           String       @id @default(cuid())
  organization Organization? @relation(fields: [orgId], references: [id], onDelete: SetNull)
  orgId        String?
  user         User?        @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId       String?
  action       String
  resourceType String
  resourceId   String?
  details      Json         @default("{}")
  ipAddress    String?
  createdAt    DateTime     @default(now())

  @@index([orgId])
  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  token     String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@map("password_reset_tokens")
}

// ============================================
// Traffic Control - Backends & Routing
// ============================================

enum BackendStatus {
  HEALTHY
  UNHEALTHY
  DRAINING
  MAINTENANCE
}

enum RoutingPolicyType {
  WEIGHTED
  CANARY
  BLUE_GREEN
  GEOGRAPHIC
  HEADER_BASED
  PATH_BASED
  FAILOVER
}

enum LoadBalancerStrategy {
  ROUND_ROBIN
  LEAST_CONNECTIONS
  RANDOM
  IP_HASH
  WEIGHTED_ROUND_ROBIN
}

model BackendCluster {
  id           String              @id @default(cuid())
  organization Organization        @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId        String
  name         String
  description  String?
  strategy     LoadBalancerStrategy @default(ROUND_ROBIN)
  healthCheck  Json                @default("{\"path\": \"/health\", \"intervalMs\": 30000, \"timeoutMs\": 5000, \"unhealthyThreshold\": 3}")
  isActive     Boolean             @default(true)
  metadata     Json                @default("{}")
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt

  backends        Backend[]
  routingPolicies RoutingPolicy[]

  @@unique([orgId, name])
  @@index([orgId])
  @@map("backend_clusters")
}

model Backend {
  id           String        @id @default(cuid())
  cluster      BackendCluster @relation(fields: [clusterId], references: [id], onDelete: Cascade)
  clusterId    String
  name         String
  host         String
  port         Int           @default(443)
  protocol     String        @default("https")
  weight       Int           @default(100)
  status       BackendStatus @default(HEALTHY)
  maxConnections Int?
  currentConnections Int     @default(0)
  lastHealthCheck DateTime?
  healthCheckPath String     @default("/health")
  tags         String[]      @default([])
  metadata     Json          @default("{}")
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  lagMetrics   LagMetric[]

  @@index([clusterId])
  @@index([status])
  @@map("backends")
}

model RoutingPolicy {
  id           String            @id @default(cuid())
  organization Organization      @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId        String
  cluster      BackendCluster?   @relation(fields: [clusterId], references: [id], onDelete: SetNull)
  clusterId    String?
  name         String
  description  String?
  type         RoutingPolicyType @default(WEIGHTED)
  priority     Int               @default(100)
  conditions   Json              @default("[]")
  actions      Json              @default("{}")
  isActive     Boolean           @default(true)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  @@unique([orgId, name])
  @@index([orgId])
  @@index([type])
  @@index([isActive])
  @@map("routing_policies")
}

// ============================================
// Lag-Aware Reads
// ============================================

enum ReplicaStatus {
  SYNCED
  LAGGING
  CATCHING_UP
  OFFLINE
}

model ReadReplica {
  id              String        @id @default(cuid())
  organization    Organization  @relation(fields: [orgId], references: [id], onDelete: Cascade)
  orgId           String
  name            String
  host            String
  port            Int           @default(5432)
  region          String?
  maxAcceptableLagMs Int        @default(1000)
  currentLagMs    Int           @default(0)
  status          ReplicaStatus @default(SYNCED)
  lastHealthCheck DateTime?
  isActive        Boolean       @default(true)
  metadata        Json          @default("{}")
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  lagMetrics      LagMetric[]

  @@unique([orgId, name])
  @@index([orgId])
  @@index([status])
  @@map("read_replicas")
}

model LagMetric {
  id          String       @id @default(cuid())
  replica     ReadReplica? @relation(fields: [replicaId], references: [id], onDelete: Cascade)
  replicaId   String?
  backend     Backend?     @relation(fields: [backendId], references: [id], onDelete: Cascade)
  backendId   String?
  lagMs       Int
  bytesLag    BigInt?
  transactionsLag Int?
  recordedAt  DateTime     @default(now())

  @@index([replicaId])
  @@index([backendId])
  @@index([recordedAt])
  @@map("lag_metrics")
}
